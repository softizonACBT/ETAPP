<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amanda.easytrafficticketapplication.Payment2"
    tools:showIn="@layout/activity_payment2"
    android:background="@drawable/tic2">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/nvl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License Number :"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Crime"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount to be paid"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Due Date"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/notick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License Number :"
        android:id="@+id/txtl"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License Number :"
        android:id="@+id/txtc"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License Number :"
        android:id="@+id/txtam"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/imageButton12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="License Number :"
        android:id="@+id/txtdd"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/textView4" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/payconf"
        android:visibility="invisible"
        android:onClick="payPhysical" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/op"
        android:visibility="invisible"
        android:onClick="onPPay" />

</RelativeLayout>
