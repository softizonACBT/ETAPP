<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amanda.easytrafficticketapplication.IssueTick4"
    tools:showIn="@layout/activity_issue_tick4"
    android:background="@drawable/tic2">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ban5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="License Number : "
        android:id="@+id/txtlic"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name : "
        android:id="@+id/txtName"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtlic"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address:"
        android:id="@+id/txtadress"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Telephone :"
        android:id="@+id/txtTel"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtadress"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driving Types :"
        android:id="@+id/txtDt"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtTel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Crime"
        android:id="@+id/txtCrime"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtDt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fee to be paid :"
        android:id="@+id/txtFee"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtCrime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Issued Date"
        android:id="@+id/txtIDate"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtFee"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Due Date:"
        android:id="@+id/txtDueD"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtIDate"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton8"
        android:layout_below="@+id/txtDueD"
        android:layout_marginTop="47dp"
        android:background="@drawable/ok"
        android:onClick="issueFinalize"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageButton10" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/back2" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/cont"
        android:onClick="finzz"
        android:visibility="invisible" />

</RelativeLayout>
