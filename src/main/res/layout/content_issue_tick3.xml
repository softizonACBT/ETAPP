<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amanda.easytrafficticketapplication.IssueTick3"
    tools:showIn="@layout/activity_issue_tick3"
    android:background="@drawable/tic2">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="37dp"
        android:id="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bant2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Crime"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fee to be paid"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs. 0.00"
        android:id="@+id/txtPrice"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="36dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/quixote_characters"
        android:spinnerMode="dropdown"

        android:background="#ffffff"
        android:layout_below="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignStart="@+id/txtPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Due Date"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView" />

    <ImageButton
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/back2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/datePicker"
        android:layout_toStartOf="@+id/spinner2" />

    <ImageButton
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/cont"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignEnd="@+id/datePicker"
        android:layout_toEndOf="@+id/textView5"
        android:onClick="next45" />

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/datePicker"
        android:calendarTextColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />
</RelativeLayout>
